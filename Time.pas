  assert((h>=0)and(h<25));
  case h of
    23,0,1,2,3:print('Доброй ночи,мир!');
    4..10:print('Доброе утро,мир!');
    11..16:print('Доброе утро,мир!');
    17..22:print('Добрый вечер,мир!');
  end;
